<div class="container">
    {{!-- going to put an image of a burger on the top --}}
    <img>
    {{!-- heading --}}
    <header>
        <h1 class="mainHeading">Burger Time!</h1>
    </header>
    <div class="burgs">
        <div class="notEatenList">
            {{!-- putting an array of burgers to be eaten --}}
            <h3 class="readyBrgrsHead">Burgers Ready to Eat</h3>
            <ul class="uneaten">
                {{#each burgers}}
                    {{!-- unless the burger is eaten, the burger will show on the first list --}}
                    {{#unless eaten}}
                        {{> burgers/burger-block eaten=true}}  
                    {{/unless}}
                {{/each}}
                {{!-- Next list will be another for loop to show burgers that have been eaten --}}
            </ul>
        </div>

        {{!-- making a list for eaten burgers --}}
        <div class="eatenList">
            <h3 class="eatBrgrsHead">Eaten Burgers</h3>
            <ul class="eaten">
                {{#each burgers}}
                    {{!-- this time I'm looking for burgers that have been eaten --}}
                    {{#if eaten}}
                        <li>
                            <p>{{id}}. {{name}}</p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    {{!-- using a form for the user to type in what burger they want to add --}}
    <form class="burgerTxt">
        <div class="form-group">
        <label for="exampleFormControlTextarea1"></label>
        <textarea class="form-control brgrAdd" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Add Burger</button>
    </form>
</div>

